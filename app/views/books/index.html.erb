<div class="body">
	<div class="container">
		<div class="row">
			<%= render 'books/list', user:@user, new_book:@new_book %>
			<div class="col-xs-9">
				<h2>Books</h2>
					<table class="table table-hover table-inverse">
						<thead>
							<tr>
								<th></th>
								<th>Title</th>
								<th>Opinion</th>
							</tr>
						</thead>
						<tbody>
						<% @books.each do |book| %>
							<tr>
								<td>
									<%= link_to attachment_image_tag(book.user, :profile_image, size:'40x40', format: 'jpeg', fallback: "no_image.jpg"), user_path(book.user_id) %>
								</td>
								<td>
									<%= link_to book.title, book_path(book.id) %>
								</td>
								<td>
									<%= book.body %>
								</td>
							</tr>
						<% end %>
						</tbody>
					</table>
			</div>
		</div>
	</div>
</div>
