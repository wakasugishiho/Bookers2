<div class="body">
	<div class="container">
		<h2>User info</h2>
		<% if @user.errors.any? %>
					<p>!error!</p>
  						<div id="error_explanation" class="alert alert-danger">
    						<ul>
      						<% @user.errors.full_messages.each do |message| %>
        						<li><%= message %></li>
      						<% end %>
    						</ul>
    					</div>
				<% end %>
			<%= form_for(@user) do |f| %>
				<div class="field">
					<label>Name</label>
					<%= f.text_field :name %>
				</div>
				<div class="field">
					<label>Image</label>
					<%= f.attachment_field :profile_image, fallback: "no_image.jpg" %>
				</div>
				<div class="field">
					<label>Introduction</label>
					<%= f.text_area :introduction %>
				</div>
				<div class="action-field">
					<%= f.submit "Update User" %>
				</div>
			<% end %>
	</div>
</div>